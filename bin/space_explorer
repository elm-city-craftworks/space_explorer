#!/usr/bin/env ruby

require "cinch"

require_relative "../lib/space_explorer"

data_dir = "#{File.dirname(__FILE__)}/../data"

bot = Cinch::Bot.new

bot.configure do |c|
  c.server = "irc.freenode.org"
  c.channels = ["#{ENV['ROVER_CHANNEL']} #{ENV['ROVER_PASSWORD']}"]
  c.nick     = "roboseacreature"
end

channel  = Cinch::Channel.new(ENV["ROVER_CHANNEL"], bot)

map_data = File.read("#{data_dir}/map.txt").lines.map { |e| e.split }
world    = SpaceExplorer::World.new(map_data, 10, 12)

delay    = 2

rover_radio   = SpaceExplorer::Radio.new(delay)
rover         = SpaceExplorer::Rover.new(world, rover_radio)

ground_control_radio  = SpaceExplorer::Radio.new(delay)
ground_control        = SpaceExplorer::MissionControl.new(channel, ground_control_radio)

rover_radio.establish_connection(ground_control)
ground_control_radio.establish_connection(rover)

bot.on(:message, /(.*)/) do |m, command|
 ground_control.send_command(command)
end

bot.start
